<% for (const comment of comments) { %>
<%= `${process.env.BASE_URL}/comments/${comment.Photo.id}` %>
<%= `${comment.User?.firstName} ${comment.User?.lastName}`.trim() %>
<%= DateTime.fromJSDate(comment.createdAt).toRelative({ style: 'narrow' }) %>
<%= comment.body %>

<% } %>

