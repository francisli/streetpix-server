<%- include('../layout/_header.html.ejs') %>
<% for (const comment of comments) { %>
  <table style="margin-bottom: 30px" role="presentation" border="0" cellpadding="0" cellspacing="0">
    <tr>
      <td style="width: 100px; height: 100px; text-align: center; vertical-align: middle; padding-right: 10px">
        <a style="display: block;" href="<%= `${process.env.BASE_URL}/comments/${comment.Photo?.id}` %>">
          <img style="max-width: 100%; max-height: 100%" src="<%= `${process.env.BASE_URL}${comment.Photo?.thumbUrl}` %>" />
        </a>
      </td>
      <td style="padding-bottom: 10px">
        <b><%= `${comment.User?.firstName} ${comment.User?.lastName}`.trim() %></b> <span class="text-muted"><%= DateTime.fromJSDate(comment.createdAt).toRelative({ style: 'narrow' }) %></span><br />
        <%= comment.body %>
      </td>
    </tr>
  </table>
<% } %>
<%- include('../layout/_footer.html.ejs') %>
